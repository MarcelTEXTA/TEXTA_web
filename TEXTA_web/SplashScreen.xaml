<Window x:Class="TEXTA_web.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TEXTA_web"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Background="CadetBlue"
        Title="SplashScreen" Height="300" Width="550" Cursor="Wait" Topmost="True">
    <Grid>
        <TextBlock Text="TEXTA web" FontSize="24" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Text="© 2025 TEXTA Dev Preview  v.1.0" FontSize="12" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20"/>
        <ProgressBar IsIndeterminate="True" Background="Transparent" BorderBrush="Transparent" VerticalAlignment="Bottom" Height="10" Margin="0"/>
    </Grid>
</Window>
