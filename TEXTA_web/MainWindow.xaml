<Window x:Class="TEXTA_web.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:svg="http://sharpvectors.codeplex.com/runtime/"
        xmlns:local="clr-namespace:TEXTA_web"
        mc:Ignorable="d"
        Icon="/Assets/IconWeb.ico"
        Title="TEXTA web" Height="600" Width="1000" AllowDrop="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35
                           "/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">

            <!-- Gauche -->
            <StackPanel MouseLeftButtonDown="TitleBar_MouseLeftButtonDown" Orientation="Horizontal" DockPanel.Dock="Left" Margin="5,0">
                <Button Click="Show_Web_Menu" Background="Transparent" BorderBrush="Transparent" Width="50" Padding="7">
                    <!--<Viewbox>
                        <Canvas Width="24" Height="24">
                            <Path Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm-1-13h2v6h-2zm0 8h2v2h-2z"/>
                            
                        </Canvas>
                    </Viewbox> -->
                    <Image Width="18" Source="/Assets/opt.png"/>
                </Button>
                <Button Background="Transparent" BorderBrush="Transparent" Width="50" Padding="7">
                    <Image Width="16" Source="/Assets/annuler.png"/>
                </Button>
                <Button Background="Transparent" BorderBrush="Transparent" Width="50" Padding="7">
                    <Image Width="16" Source="/Assets/refaire.png"/>
                </Button>
                <Button Background="Transparent" BorderBrush="Transparent" Width="50" Padding="7">
                    <Image Width="16" Source="/Assets/actualiser.png"/>
                </Button>
            </StackPanel>

            <!-- Droite -->
            <StackPanel MouseLeftButtonDown="TitleBar_MouseLeftButtonDown" Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                <Button Background="Transparent" BorderBrush="Transparent" Foreground="Black" Content="Tool" Width="45"/>
            </StackPanel>

            <!-- Centre -->
            <StackPanel MouseLeftButtonDown="TitleBar_MouseLeftButtonDown" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Content="Infos"/>
                <TextBox x:Name="navbar"  Width="450" Margin="0" Padding="3" VerticalAlignment="Center" 
                 HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <Button Background="Transparent" BorderBrush="Transparent">
                    <Image Width="20" Source="/Assets/share.png"/>
                </Button>
            </StackPanel>

        </Grid>

        <TabControl x:Name="MainTabControl" Grid.Row="1" TabStripPlacement="Left"
                    SelectionChanged="MainTabControl_SelectionChanged"/>
    </Grid>
</Window>
