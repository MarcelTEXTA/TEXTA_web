<Window x:Class="TEXTA_web.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TEXTA_web"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35
                           "/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">

            <!-- Gauche -->
            <StackPanel MouseLeftButtonDown="TitleBar_MouseLeftButtonDown" Orientation="Horizontal" DockPanel.Dock="Left" Margin="5,0">
                <Button Width="50" Padding="7">
                    <Image Width="24" Source="/Assets/opt.png"/>
                </Button>
                <Button Width="50" Padding="7">
                    <Image Width="24" Source="/Assets/actualiser.png"/>
                </Button>
                <Button Width="50" Padding="7">
                    <Image Source="/Assets/undo.png"/>
                </Button>
                <Button Width="50" Padding="7">
                    <Image Source="/Assets/restore.png"/>
                </Button>
            </StackPanel>

            <!-- Droite -->
            <StackPanel MouseLeftButtonDown="TitleBar_MouseLeftButtonDown" Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                <Button Background="Transparent" BorderBrush="Transparent" Content="—" Width="45" Click="Minimize_Click"/>
                <Button Background="Transparent" BorderBrush="Transparent" Content="☐" Width="45" Click="Maximize_Click"/>
                <Button Background="Transparent" BorderBrush="Transparent" Content="✕" Width="45" Click="Close_Click"/>
            </StackPanel>

            <!-- Centre -->
            <StackPanel MouseLeftButtonDown="TitleBar_MouseLeftButtonDown" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Content="Infos"/>
                <TextBox Width="250" Margin="5" VerticalAlignment="Center" 
                 HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <Button Content="Share"/>
            </StackPanel>

        </Grid>

        <TabControl x:Name="MainTabControl" Grid.Row="1" TabStripPlacement="Left"
                    SelectionChanged="MainTabControl_SelectionChanged"/>
    </Grid>
</Window>
